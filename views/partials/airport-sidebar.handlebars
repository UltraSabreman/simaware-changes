<div id="airport-sidebar" style="display: none">
    <div id="control-airport-pullout" class="control-pullout" onclick="returnSidebarToView('airport-sidebar', 'control-airport-pullout'); $(this).css({display: 'none'})">
        <i class="fas fa-long-arrow-alt-left"></i>
    </div>
    <div id="controls-container">
        <div class="control" style="margin-right: 0.5rem" onclick="$('#airport-sidebar').animate({right: -350}, 250, 'easeOutSine'); $('#control-airport-pullout').css({display: 'flex'})"><i class="fas fa-long-arrow-alt-right"></i></div>
        <div class="control" onclick="returnFromAirport()"><i class="fas fa-times"></i></div>
    </div>
    <div id="sidebar-container">
        <div id="airport-cap" class="p-3 d-flex flex-column">
            <div>
                <h3 id="airport-icao">&nbsp;</h3>
                <h6 id="airport-name" class="mb-0">&nbsp;</h6><h6 id="airport-city" class="mb-0 text-muted">&nbsp;</h6>
            </div>
            <div id="airport-atc" class="">
            </div>
        </div>
        <div id="airport-list-wrapper" class="os-host-flexbox">
            <div id="airport-status" class="text-white px-3 py-2">
                <i class="fas fa-plane-arrival">&nbsp;</i> <span class="me-3" id="arrcount"></span>
                <i class="fas fa-plane-departure">&nbsp;</i> <span id="depcount"></span>
            </div>
            <table id="airport-list" class="w-100">
            </table>
        </div>
    </div>
</div>

<!-- Initialize the scrollbar -->
<script>
    $('#airport-list-wrapper').overlayScrollbars({ });
</script>